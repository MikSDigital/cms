<body class="body">

<div class="pm">
    <nav class="navbar navbar-default navbar-static-top" id="pm-navbar">
        {{ form_start(form) }}
        <div class="container-fluid">
            <div class="navbar-left">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-default navbar-btn navbar-left'}}) }}
                <a href="{{ path('opifer_content_template_index') }}" class="btn btn-link navbar-btn navbar-left">Cancel</a>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="pm-navbar-title">
                {{ block.name }} {{ form_widget(form.name) }}
            </div>
            <div class="collapse navbar-collapse" id="navbar">
                <div class="btn-toolbar navbar-right">
                    <div class="btn-group navbar-btn">
                        <a class="btn btn btn-default btn-icon btn-reload disabled"><i class="material-icons">autorenew</i></a>
                    </div>
                    <div class="btn-group navbar-btn">
                        <a class="btn btn btn-default disabled">Properties</a>
                    </div>
                    <div class="btn-group navbar-btn" data-toggle="buttons" role="group" aria-label="">
                        <label for="viewmode-content" class="btn btn btn-default active"><input type="radio" name="viewmode" id="viewmode-content" value="CONTENT" autocomplete="off" checked>Content</label>
                        <label for="viewmode-preview" class="btn btn btn-default"><input type="radio" name="viewmode" id="viewmode-preview" value="PREVIEW" autocomplete="off">Preview</label>
                        <label for="viewmode-layout" class="btn btn btn-default"><input type="radio" name="viewmode" id="viewmode-layout" value="LAYOUT" autocomplete="off">Layout</label>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </nav>
</div>


