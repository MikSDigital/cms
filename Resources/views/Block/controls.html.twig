{% block block_manage_placeholder %}
    <div class="pm-placeholder {% if content|length <= 0 %}pm-empty{% endif %}" data-pm-placeholder-key="{{ key }}">
        {{ content|raw }}
        {#<div class="pm pm-placeholder-droparea">#}
            {#<div class="pm-caption text-muted text-center">Drag blocks here <span class="key hidden">{{ key }}</span></div>#}
        {#</div>#}
    </div>
{% endblock block_manage_placeholder %}

{% block block_manage_template %}
    <div class="pm-block pm-layout pm-template" data-pm-block-id="{{ block.id }}">
        {% include block_view %}
    </div>
{% endblock block_manage_template %}

{% block block_manage_layout %}
    <div class="pm-block pm-layout" data-pm-block-id="{{ block.id }}">
        <div class="pm pm-toolbar clearfix">
            <div class="row">
                <div class="col-xs-6">
                    <span class="pm-toolbar-text">{{ block_service.name(block) }} <code>{{ block.id }}</code></span>
                </div>
                <div class="col-xs-6">
                    <a href="#" class="btn btn-link pull-right btn-delete"><i class="material-icons">close</i> Delete</a>
                    <a href="#" class="btn btn-link pull-right btn-edit"><i class="material-icons">create</i> Edit</a>
                </div>
            </div>
        </div>
        {% include block_view %}
    </div>
{% endblock block_manage_layout %}

{% block block_manage_default %}
    <div class="pm-block pm-content" data-pm-block-id="{{ block.id }}">
        <div class="pm pm-toolbar clearfix">
            <div class="row">
                <div class="col-xs-6">
                    <span class="pm-toolbar-text">{{ block_service.name }} <code>{{ block.id }}</code></span>
                </div>
                <div class="col-xs-6">
                    <a href="#" class="btn btn-link pull-right btn-delete"><i class="material-icons">close</i> Delete</a>
                    <a href="#" class="btn btn-link pull-right btn-edit"><i class="material-icons">create</i> Edit</a>
                </div>
            </div>
        </div>
        {% include block_view %}
    </div>
{% endblock block_manage_default %}