{% extends 'OpiferCmsBundle::base.html.twig' %}

{% block body %}
    <div class="page-header clearfix">
        <h1 class="pull-left">{{ 'menu.edit.title'|trans|capitalize }}</h1>
    </div>

    {% if localeMenu %}
        <div class="page-tabs">
            {{ knp_menu_render(localeMenu, { 'style': 'tabs' }) }}
        </div>
    {%endif %}

    {% if not form.vars.valid %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <section class="page-section">

        {{ form_start(form, {'style': 'horizontal', 'attr': {'novalidate':'novalidate'} }) }}

        {% set btn_save = form_widget(form.save) %}
        {% do form.save.setRendered %}

        {{ form_rest(form) }}


        <div class="form-group">
            <div class="col-xs-12 col-sm-10 col-sm-offset-2">
                <div class="pull-left">
                    {{ btn_save|raw }}
                </div>
                <div class="pull-right">
                    <a href="{{ path('opifer_cms_menu_index') }}"
                       class="btn btn-link">{{ 'button.cancel'|trans|capitalize }}</a>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(form) }}
{% endblock %}
