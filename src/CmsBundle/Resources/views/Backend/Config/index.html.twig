{% extends 'OpiferCmsBundle:Backend:base.html.twig' %}

{% block body %}
    <div class="col-xs-12">
        <div class="page-header">
            <h1>{{ "title.config"|trans }}</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {{ form_start(form, {'style': 'horizontal'}) }}
                {{ form_widget(form) }}

                <div class="form-group form-footer">
                    <div class="col-xs-12">
                        <input type="submit" value="{{ 'button.submit'|trans }}" class="btn btn-primary"/>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
