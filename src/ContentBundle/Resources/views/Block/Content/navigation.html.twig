
<div {{ manage_tags() }}>
    {{ _self.render_tree(block.tree) }}
</div>

{% macro render_tree(tree) %}
    <ul>
        {% for item in tree if item.showInNavigation == true %}
            <li>
                {{ item.title }}
                {% if item.__children|default() %}
                    {{ _self.render_tree(item.__children) }}
                {% elseif item.children|default %}
                    {{ _self.render_tree(item.children) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
{% endmacro %}
