<div {{ manage_tags() }}>
	<ul class="media-list">
		{% if block.items|default %}
			{% for item in block.items %}
				{% if item.provider != 'youtube' %}
					<li class="media">
						<div class="media-left">
						  <a href="{{ path('opifer_download_block', {'id' : item.id }) }}">
						    {% if item.provider != 'image' %}
						    	<img class="media-object" src="http://placehold.it/200x100" alt="{{ item.alt }}">
						    {% else %}
						    	<img class="media-object" src="{{ item.reference|imagine_filter('medialibrary') }}" alt="{{ item.alt }}">
						    {% endif %}
						  </a>
						</div>
						<div class="media-body">
						  <h4 class="media-heading">Title: {{ item.name }}</h4>
						  <h4 class="media-heading">Filename: {{ item.reference }}</h4>
						  <p class="media-info">Filesize: {{ item.filesize / 1024 / 1024 | number_format(2) }} Mb</p>
						  <p class="media-info">File type: {{ item.contentType }}</p>
						  <p class="media-info"><a href="{{ path('opifer_download_block', {'id' : item.id }) }}">Download</a></p>
						</div>
					</li>
				{% endif %}
			{% endfor %}
		{% endif %}
	</ul>
</div>